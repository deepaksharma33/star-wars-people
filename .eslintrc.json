{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "off",
        "@typescript-eslint/no-non-null-assertion": "off",
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/naming-convention": "off"
    }
}
